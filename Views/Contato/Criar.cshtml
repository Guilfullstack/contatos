@model ControleContatos.Models.ContatoModel

@{
    ViewData["Title"] = "Criar Contato";
}
<div class="text-center">
    <h1 class="display-4">Criar novo contato</h1> 
    
</div>
<form asp-controller="Contato" asp-action="Criar"  method="post">
  <div class="mb-3">
    <label asp-for="Nome" class="form-label">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" aria-describedby="emailHelp" placeholder="Digite o nome do contato">
    @Html.ValidationMessageFor(x=>x.Nome)
  </div>
  <div class="mb-3">
    <label asp-for="Email" class="form-label">Email</label>
    <input type="text" asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="Digite o email do contato">
    @Html.ValidationMessageFor(x=>x.Email)
  </div>
  <div class="mb-3">
    <label asp-for="Celular" class="form-label">Celular</label>
    <input type="text" asp-for="Celular" class="form-control" aria-describedby="emailHelp" placeholder="Digite o numero do contato">
    @Html.ValidationMessageFor(x=>x.Celular)
  </div>
  <button type="submit" class="btn btn-primary btn-block">Salvar</button>
  <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>