@model HomeModel
@{
    ViewData["Title"] = "Criar Contato";
}
<div class="text-center">
    <h1 class="display-4">Criar novo contato</h1> 
    
</div>
<form>
  <div class="mb-3">
    <label for="nome" class="form-label">Nome</label>
    <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Digite o nome do contato">
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Digite o email do contato">
  </div>
  <div class="mb-3">
    <label for="celular" class="form-label">Celular</label>
    <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Digite o numero do contato">
  </div>

  <button type="submit" class="btn btn-primary btn-block">Salvar</button>
  <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>